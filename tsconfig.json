{
  "compilerOptions": {
    "baseUrl":"./",
    "paths": {
    "@components/*": ["components/*"],
    "@shared/*":["shared/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "styled.d.ts", "components/post/index"],
  "exclude": ["node_modules"]
}
